<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_gradient_background" />

        <View
            android:id="@+id/glow_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_glow_background"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_inner_shadow" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:contentDescription="@string/game_element"
            android:scaleType="centerInside"
            android:src="@drawable/el1" />

        <View
            android:id="@+id/highlight_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_highlight_border"
            android:visibility="gone" />

    </FrameLayout>

</androidx.cardview.widget.CardView>