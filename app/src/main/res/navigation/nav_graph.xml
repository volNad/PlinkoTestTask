<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="plinko.test.task.plinko.ui.fragments.splash.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_to_content"
            app:destination="@id/contentFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_menu"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/contentFragment"
        android:name="plinko.test.task.plinko.ui.fragments.content.ContentFragment"
        android:label="ContentFragment">
        <action
            android:id="@+id/action_menu_to_game"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_menu_to_leaderboard"
            app:destination="@id/leaderboardFragment" />
        <action
            android:id="@+id/action_menu_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_menu_to_about"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="plinko.test.task.plinko.ui.fragments.menu.MenuFragment"
        android:label="MenuFragment">
        <action
            android:id="@+id/action_menu_to_game"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_menu_to_leaderboard"
            app:destination="@id/leaderboardFragment" />
        <action
            android:id="@+id/action_menu_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_menu_to_about"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="plinko.test.task.plinko.ui.fragments.game.GameFragment"
        android:label="GameFragment" />

    <fragment
        android:id="@+id/leaderboardFragment"
        android:name="plinko.test.task.plinko.ui.fragments.leaderboard.LeaderboardFragment"
        android:label="LeaderboardFragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="plinko.test.task.plinko.ui.fragments.settings.SettingsFragment"
        android:label="SettingsFragment" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="plinko.test.task.plinko.ui.fragments.about.AboutFragment"
        android:label="AboutFragment" />

</navigation>